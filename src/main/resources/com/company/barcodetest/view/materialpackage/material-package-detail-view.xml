<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://materialPackageDetailView.title"
      focusComponent="form">
    <data>
        <instance id="materialPackageDc"
                  class="com.company.barcodetest.entity.MaterialPackage">
            <fetchPlan extends="_base">
                <property name="lot" fetchPlan="_base">
                    <property name="material" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="materialPackageDc">
            <textField id="codeField" property="code"/>
            <textField id="quantityField" property="quantity"/>
            <entityPicker id="lotField" property="lot">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <div id="testDiv"></div>
        </formLayout>
        <hbox id="detailActions">
            <button id="barcodePrint" text="barcodePrint"/>
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
