<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://lotListView.title"
      focusComponent="lotsDataGrid">
    <data readOnly="true">
        <collection id="lotsDc"
                    class="com.company.barcodetest.entity.Lot">
            <fetchPlan extends="_base">
                <property name="packages" fetchPlan="_base"/>
                <property name="material" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="lotsDl">
                <query>
                    <![CDATA[select e from Lot e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="lotsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="lotsDataGrid.create"/>
            <button id="editBtn" action="lotsDataGrid.edit"/>
            <button id="removeBtn" action="lotsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="lotsDl"/>
        </hbox>
        <dataGrid id="lotsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="lotsDc">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns>
                <column property="lotCode"/>
                <column property="supplier"/>
                <column property="material"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
