<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://materialListView.title"
      focusComponent="materialsDataGrid">
    <data readOnly="true">
        <collection id="materialsDc"
                    class="com.company.barcodetest.entity.Material">
            <fetchPlan extends="_base">
                <property name="lots" fetchPlan="_base">
                    <property name="packages" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="materialsDl">
                <query>
                    <![CDATA[select e from Material e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="materialsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="materialsDataGrid.create"/>
            <button id="editBtn" action="materialsDataGrid.edit"/>
            <button id="removeBtn" action="materialsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="materialsDl"/>
        </hbox>
        <dataGrid id="materialsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="materialsDc">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns>
                <column property="materialCode"/>
                <column property="materialName"/>
                <column property="file1"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
