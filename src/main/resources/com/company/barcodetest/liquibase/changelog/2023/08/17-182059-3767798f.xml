<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="barcodeTest">
        <createTable tableName="LOT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_LOT"/>
            </column>
            <column name="LOT_CODE" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="SUPPLIER" type="VARCHAR(255)"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="MATERIAL_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="barcodeTest">
        <createTable tableName="MATERIAL">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_MATERIAL"/>
            </column>
            <column name="MATERIAL_CODE" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="MATERIAL_NAME" type="VARCHAR(255)"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="barcodeTest">
        <createTable tableName="MATERIAL_PACKAGE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_MATERIAL_PACKAGE"/>
            </column>
            <column name="CODE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="QUANTITY" type="FLOAT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="LOT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="barcodeTest">
        <createIndex indexName="IDX_LOT_MATERIAL" tableName="LOT">
            <column name="MATERIAL_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="MATERIAL_ID" baseTableName="LOT" constraintName="FK_LOT_ON_MATERIAL"
                                 onDelete="CASCADE" referencedColumnNames="ID" referencedTableName="MATERIAL"/>
    </changeSet>
    <changeSet id="5" author="barcodeTest">
        <createIndex indexName="IDX_MATERIAL_PACKAGE_LOT" tableName="MATERIAL_PACKAGE">
            <column name="LOT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="LOT_ID" baseTableName="MATERIAL_PACKAGE"
                                 constraintName="FK_MATERIAL_PACKAGE_ON_LOT" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="LOT"/>
    </changeSet>
</databaseChangeLog>